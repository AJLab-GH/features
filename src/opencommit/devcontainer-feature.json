{
  "name": "opencommit",
  "id": "opencommit",
  "version": "0.0.12",
  "description": "opencommit using ollama",
  "installsAfter": [
    "ghcr.io/devcontainers/features/common-utils",
    "ghcr.io/devcontainers/features/node"
  ],
  "containerEnv": {
    "OCO_AI_PROVIDER": "ollama"
  },
  "dependsOn": [
    "ghcr.io/devcontainers/features/node"
  ],
  "onCreateCommand": "git config --global --add safe.directory `pwd` && oco hook set || continue"
}
